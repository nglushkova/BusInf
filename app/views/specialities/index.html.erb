<h1>Направления подготовки</h1><br/>
<p id="notice"><%= notice %></p><br/>

<table>
  <tr>
    <th>Название</th>
    <th>Сокращение</th>
  </tr>

  <% @specialities.each do |speciality| %>
      <tr>
        <td><%= speciality.spec_name %></td>
        <td><%= speciality.spec_redaction %></td>
        <td><%= link_to 'Подробнее', speciality %></td>
        <td><%= link_to 'Редактировать', edit_speciality_path(speciality) %></td>
        <td><%= link_to 'Удалить', speciality, confirm: 'Действительно удалить?', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'Добавить специальность', new_speciality_path %>