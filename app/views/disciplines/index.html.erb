<h1>Список преподаваемых дисциплин</h1>
<p id="notice"><%= notice %></p><br/>


<table>
  <tr>
    <th>Название</th>
    <th>Семестр</th>

  </tr>

  <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.disc_name %></td>
        <td align="center"><%= discipline.disc_semester %></td>
        <td><%= link_to 'Подробное описание', discipline %></td>
        <td><%= link_to 'Редактировать', edit_discipline_path(discipline) %></td>
        <td><%= link_to 'Удалить', discipline, confirm: 'Вы уверены?', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'Добавить дисциплину', new_discipline_path %>
