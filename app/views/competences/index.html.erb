<h1>Список компетенций</h1>

<table>
  <tr>
    <th>Код компетенции</th>
    <th>Название компетенции</th>


  </tr>

  <% @competences.each do |competence| %>
      <tr>
        <td><%= competence.comp_group %></td>
        <td><%= competence.comp_name %></td>

        <td><%= link_to 'Подробно', competence %></td>
        <td><%= link_to 'Редактировать', edit_competence_path(competence) %></td>
        <td><%= link_to 'Удалить', competence, confirm: 'Вы уверены?', method: :delete %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'Добавить компетенцию', new_competence_path %>
