<% if target.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(target.errors.count, "ошибка") %>
        остановили сохранение данных:</h2>
    <p>Проверьте следующие поля:</p>
    <ul>
    <% target.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>